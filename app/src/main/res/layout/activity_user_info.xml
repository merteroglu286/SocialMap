<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_info_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userModel"
            type="com.example.socialmap.UserModel" />
    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.UserInfoActivity"
        >

        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <ImageButton
                android:id="@+id/btn_popup"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:background="#F0F4F5"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="90dp"
                android:text="7,6"
                android:textColor="#1DD805"
                android:textSize="24dp" />

            <com.github.guilhe.circularprogressview.CircularProgressView
                android:id="@+id/circular_progress_image"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                app:backgroundColor="@color/transparent"
                app:progress="76"
                app:progressBarColor="#1DD805"
                app:progressBarThickness="10dp"
                app:shadow="false" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgProfile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/userName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/btnFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Takip Et"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="6dp"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:background="@drawable/gradient_button_background"
                    />
                <TextView
                    android:id="@+id/btnMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mesaj"
                    android:paddingVertical="6dp"
                    android:textSize="16dp"
                    android:textColor="@color/myColor"
                    android:paddingHorizontal="31dp"
                    android:background="@drawable/text_button_background"
                    />
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/linear1"
            >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>



    </RelativeLayout>

</layout>