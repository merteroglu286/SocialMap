<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/textAcilanTeklif"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        android:text="....... oyun teklifini kabul ediyor musun?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/textAcilanTeklif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTeklifKabul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/forestGreen"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_marginEnd="40dp"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabTeklifRet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_marginStart="40dp"/>
    </LinearLayout>
</RelativeLayout>