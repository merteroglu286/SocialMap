<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userModel"
            type="com.example.socialmap.UserModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F4F5"
        >


        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <ImageButton
                android:id="@+id/btn_popup"
                android:layout_width="36dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:background="#F0F4F5"
                android:src="@drawable/ic_baseline_more_vert_24"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/progressRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="90dp"
                android:text="7,6"
                android:textColor="#1DD805"
                android:textSize="24dp" />

            <com.github.guilhe.circularprogressview.CircularProgressView
                android:id="@+id/circular_progress_image"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                app:backgroundColor="@color/transparent"
                app:progress="35"
                app:progressBarColor="#1DD805"
                app:progressBarThickness="10dp"
                app:shadow="false" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="85dp"
                android:src="@drawable/icon_main" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@id/imgProfile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="username"
                android:textSize="28dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/userName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/btnProfileDuzenle"
                    android:layout_width="218dp"
                    android:layout_height="wrap_content"
                    android:text="Profili DÃ¼zenle"
                    android:backgroundTint="@color/profileDuzenleColor"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/linear1"
            android:background="@color/white"
            >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabTextColor="@color/myColor"
                app:tabSelectedTextColor="@color/myColor"
                app:tabIndicatorColor="@color/myColor"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>



    </RelativeLayout>
</layout>