<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="userModel"
            type="com.example.socialmap.UserModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ProfileIsletme.ProfileIsletmeFragment">


        <ImageButton
            android:id="@+id/btn_popup"
            android:layout_width="36dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:translationZ="1dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:tint="@color/white" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerDashboard"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@color/black" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@drawable/layout_bk">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_editor_absoluteX="20dp"
                    app:layout_editor_absoluteY="10dp">

                    <TextView
                        android:id="@+id/isletmeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Null"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/isletmeName"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btnFollow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_type_1"
                            android:paddingHorizontal="40dp"
                            android:paddingVertical="6dp"
                            android:text="Ara"
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/btnMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/isletme_gradient_buttons"
                            android:paddingHorizontal="31dp"
                            android:paddingVertical="6dp"
                            android:text="Mesaj"
                            android:textColor="@color/myColor"
                            android:textSize="16dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linear1"
                        android:layout_marginTop="6dp"
                        android:background="@drawable/isletme_gradient_buttons"
                        android:paddingHorizontal="48dp"
                        android:paddingVertical="6dp"
                        android:text="Rezervasyon Yap"
                        android:textColor="@color/myColor"
                        android:textSize="16dp" />

                </RelativeLayout>

                <com.github.guilhe.circularprogressview.CircularProgressView
                    android:id="@+id/circular_progress_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    app:backgroundColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:progress="76"
                    app:progressBarColor="#1DD805"
                    app:progressBarThickness="4dp"
                    app:shadow="false" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7,6"
                    android:textColor="#1DD805"
                    android:textSize="32dp"
                    app:layout_constraintBottom_toBottomOf="@+id/circular_progress_image"
                    app:layout_constraintEnd_toEndOf="@+id/circular_progress_image"
                    app:layout_constraintStart_toStartOf="@+id/circular_progress_image"
                    app:layout_constraintTop_toTopOf="@+id/circular_progress_image" />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/contraintLayout"
                android:background="@color/white"
                >

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabTextColor="@color/myColor"
                    app:tabSelectedTextColor="@color/myColor"
                    app:tabIndicatorColor="@color/myColor"/>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>
