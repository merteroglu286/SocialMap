<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.example.socialmap.activities.MessageActivity" />

        <variable
            name="userModel"
            type="com.example.socialmap.UserModel" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MessageActivity">

        <include
            android:id="@+id/messageToolbar"
            layout="@layout/message_toolbar"
            bind:activity="@{activity}" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="14dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            bind:tint="#9da09f" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{userModel.name,default=notify}"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginHorizontal="96dp"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            imageUrl="@{userModel.image}"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:translationZ="1dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messageRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/msgData"
            android:layout_below="@+id/messageToolbar"
            android:background="#dbe5e6"
            android:clipToPadding="false"
            android:paddingVertical="16dp" />

        <LinearLayout
            android:id="@+id/msgData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingVertical="12dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/messageLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/btnDataSend"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_baseline_keyboard_voice_24"
                    bind:tint="@color/myColor"/>

                <EditText
                    android:id="@+id/msgText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/message_edittext_send_background"
                    android:hint="Bir mesaj yazÄ±n"
                    android:inputType="textMultiLine"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:text="@string/default_text" />
            </LinearLayout>


            <ImageView
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_gravity="center|bottom"
                android:layout_marginEnd="5dp"
                android:layout_weight=".2"
                android:src="@drawable/ic_baseline_send_24"
                bind:tint="@color/myColor" />


        </LinearLayout>

    </RelativeLayout>
</layout>